@model Product

<div class="d-flex flex-column align-items-center border w-50 m-auto p-2">
    <h1>Створення товару</h1>
    <div class="w-100 p-3">
        <form asp-action="Delete" method="post">
            <input asp-for="Image" hidden />
            <div class="form-group">
                <label for="name">Назва</label>
                <input disabled asp-for="Name" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Опис</label>
                <input disabled asp-for="Description" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="price">Ціна</label>
                <input disabled asp-for="Price" type="number" class="form-control">
            </div>
            <div class="form-group">
                <label for="amount">Кількість</label>
                <input disabled asp-for="Amount" type="number" class="form-control">
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" value="Видалити" class="btn btn-success flex-grow-1 m-3" />
                <a asp-action="Index" class="btn btn-dark flex-grow-1 m-3">Повернутися</a>
            </div>
        </form>
    </div>
</div>